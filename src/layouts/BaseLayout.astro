---
const { title } = Astro.props;
import '../styles/modules/system/system.base.css';
import '../styles/modules/system/system.menus.css';
import '../styles/modules/system/system.messages.css';
import '../styles/modules/system/system.theme.css';

import '../styles/modules/comment/comment.css';
import '../styles/modules/field/theme/field.css';
